<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#d6eaf8"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                app:srcCompat="@drawable/pvp_main" />

            <TextView
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/pvp_start"
                android:gravity="center"
                android:paddingRight="15dp"
                android:paddingBottom="10dp"
                android:fontFamily="@font/nanumgothic"
                android:scaleType="centerCrop"
                android:text="매칭 시작"
                android:textColor="#fff"
                android:textSize="25dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="@drawable/sp_main2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/sp_main"
                    android:paddingLeft="5dp"
                    android:fontFamily="@font/nanumgothic"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="    My State     "
                    android:textColor="#fff"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/piechart2"
                        android:fontFamily="@font/nanumgothic"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginLeft="40dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/my_tier"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"

                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/tier1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mypvpstate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/nanumgothic"
                        android:gravity="center"
                        android:text="26전 15승 11패\n(승률 58%)"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/mypvprating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="28dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/nanumgothic"
                        android:gravity="center"
                        android:text="Rating : 1850\n(다음 티어까지 150남음)"
                        android:textSize="15dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/nanumgothic"
                    android:background="@drawable/sp_main"
                    android:paddingLeft="5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="    Latest PVP    "
                    android:textColor="#fff"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/nanumgothic"
                        android:gravity="center"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_weight="2"
                        android:fontFamily="@font/nanumgothic"
                        android:gravity="center"
                        android:text="아직 참여한 게임이 없습니다." />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>