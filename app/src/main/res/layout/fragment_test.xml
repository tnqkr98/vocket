<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#d6eaf8"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/space1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/sp_main2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView47"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:background="@drawable/sp_main"
                android:fontFamily="@font/nanumgothic"
                android:paddingLeft="30dp"
                android:paddingTop="5dp"
                android:paddingRight="30dp"
                android:paddingBottom="5dp"
                android:text="Today Report"
                android:textColor="#fff"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/test_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumgothic"
                android:gravity="center"
                android:padding="10dp"
                android:text="총 00개 단어 학습"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/test_cor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumgothic"
                android:gravity="center"
                android:padding="10dp"
                android:text="맞은 단어 00개"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/test_incor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/nanumgothic"
                android:gravity="center"
                android:padding="10dp"
                android:text="틀린 단어 00개"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/sp_main"
                android:fontFamily="@font/nanumgothic"
                android:gravity="center"
                android:padding="10dp"
                android:text="Test 시작"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/space2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mode1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="0"
            android:background="#1187cf"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/check1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:paddingLeft="50dp"
                app:srcCompat="@drawable/ic_testcheck" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:fontFamily="@font/nanumgothic"
                android:padding="17dp"
                android:text="최근 추가한 단어 모드"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mode2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#aa1187cf"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/check2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:paddingLeft="50dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_testcheck" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:padding="17dp"
                android:text="오래된 단어 모드"
                android:fontFamily="@font/nanumgothic"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mode3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#aa1187cf"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/check3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:paddingLeft="50dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_testcheck" />

            <TextView
                android:id="@+id/texiView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:padding="17dp"
                android:text="자주 틀리는 단어 모드"
                android:fontFamily="@font/nanumgothic"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mode4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#aa1187cf"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/check4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:paddingLeft="50dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_testcheck" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:padding="17dp"
                android:fontFamily="@font/nanumgothic"
                android:text="알아서 단어 모드"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>