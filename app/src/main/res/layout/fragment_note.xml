<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#d6eaf8"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/space4"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sp_main2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="100dp"
                    android:layout_margin="10dp"
                    android:textSize="15dp"
                    android:padding="3dp"
                    android:textColor="#fff"
                    android:fontFamily="@font/nanumgothic"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sp_main"
                    android:text="내 단어장" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="15dp"
                    android:background="#0fff"
                    android:fontFamily="@font/nanumgothic"
                    android:gravity="left|center_vertical"
                    android:text=" 내가 추가한 단어 모두 보기 (총 0개)                 >"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <TextView
                android:id="@+id/space5"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sp_main2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="140dp"
                    android:layout_margin="10dp"
                    android:textSize="15dp"
                    android:padding="3dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumgothic"
                    android:background="@drawable/sp_main"
                    android:text="내 단어 골라보기" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="15dp"
                    android:background="#0fff"
                    android:fontFamily="@font/nanumgothic"
                    android:gravity="left|center_vertical"
                    android:text=" 최근 학습한 단어 보기 (총 0개)                        >"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="15dp"
                    android:background="#0fff"
                    android:fontFamily="@font/nanumgothic"
                    android:gravity="left|center_vertical"
                    android:text=" 최근 틀린 단어 보기 (총 0개)                           >"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="15dp"
                    android:background="#0fff"
                    android:fontFamily="@font/nanumgothic"
                    android:gravity="left|center_vertical"
                    android:text=" 자주 틀리는 단어 보기 (총 0개)                        >"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <TextView
                android:id="@+id/space6"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sp_main2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="140dp"
                    android:layout_margin="10dp"
                    android:textSize="15dp"
                    android:textColor="#fff"
                    android:padding="3dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sp_main"
                    android:fontFamily="@font/nanumgothic"
                    android:text="기본 제공 단어" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/bt_toeic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/nanumgothic"
                        app:srcCompat="@drawable/toeic" />

                    <ImageView
                        android:id="@+id/bt_teps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/nanumgothic"
                        app:srcCompat="@drawable/teps" />

                    <ImageView
                        android:id="@+id/bt_toefl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/nanumgothic"
                        app:srcCompat="@drawable/toefl" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:fontFamily="@font/nanumgothic"
                        android:text="토익" />

                    <TextView
                        android:id="@+id/textView33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:fontFamily="@font/nanumgothic"
                        android:text="텝스" />
                    <TextView
                        android:id="@+id/textView34"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:fontFamily="@font/nanumgothic"
                        android:gravity="center"
                        android:text="토플" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/bt_trans"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/trans2" />

                    <ImageView
                        android:id="@+id/bt_sat"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        app:srcCompat="@drawable/su2" />

                    <ImageView
                        android:id="@+id/bt_publicc"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        app:srcCompat="@drawable/gong2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textView35"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:fontFamily="@font/nanumgothic"
                        android:gravity="center"
                        android:text="  편입  " />
                    <TextView
                        android:id="@+id/textView36"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/nanumgothic"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:text="  수능  " />
                    <TextView
                        android:id="@+id/textView37"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:fontFamily="@font/nanumgothic"
                        android:gravity="center"
                        android:text="공무원" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>